<h1>Listing notes</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Selection</th>
    <th>Block</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.content %></td>
    <td><%= note.selection %></td>
    <td><%= note.block %></td>
    <td><%= link_to 'Show', [note.article, note] %></td>
    <td><%= link_to 'Edit', edit_article_note_path(note.article, note) %></td>
    <td><%= link_to 'Destroy', [note.article, note], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= render "partials/provider_list" %>
  <h3>Or sign in with a Grasp Account</h3>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me,  :inline_label => "Remember me", :label => false, :as => :boolean if devise_mapping.rememberable?%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
